@model MoneyMate.Models.Currency.CurrencyCreate

@{
    ViewBag.Title = "Create a Currency";
}

<div class="container section-container">
    <h1>Create a Currency</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CurrencyName" class="control-label">Currency Name</label>
                    <input asp-for="CurrencyName" class="form-control" placeholder="Enter currency name" />
                    <span asp-validation-for="CurrencyName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Code" class="control-label">Currency Code</label>
                    <input asp-for="Code" class="form-control" placeholder="Enter currency code" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
