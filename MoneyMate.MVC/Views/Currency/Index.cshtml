@model IEnumerable<MoneyMate.Models.Currency.CurrencyListItem>

@{
    ViewBag.Title = "Currency Index";
}

<div class="utility-container">
    <h1>Currency Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CurrencyId)</th>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th>@Html.DisplayNameFor(model => model.CurrencyName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CurrencyId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrencyName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CurrencyId" class="btn btn-info">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.CurrencyId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
