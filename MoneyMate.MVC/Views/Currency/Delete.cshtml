@model MoneyMate.Models.Currency.CurrencyDetail

@{
    string title = "Delete " + Model.CurrencyName;
    ViewData["Title"] = title;
}

<div class="container">
    <h1>@title</h1>
    <h4>Are you sure you want to delete @Model.CurrencyName?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrencyName)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.CurrencyId)
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
