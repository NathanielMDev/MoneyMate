@model MoneyMate.Models.Expense.ExpenseEdit
@{
    string title = "Edit" + Model.Description;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(model => model.ExpenseId)
            <label asp-for="Description"></label>
            <input asp-for="Description" />
            <span asp-validation-for="Description"></span>

            <label asp-for="Amount"></label>
            <input asp-for="Amount" />
            <span asp-validation-for="Amount"></span>

            <label asp-for="Date"></label>
            <input asp-for="Date" />
            <span asp-validation-for="Date"></span>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Category</label>
                @Html.DropDownListFor(model => model.CategoryId, ViewData["CategoryList"] as SelectList, new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentId" class="control-label">Payment Method</label>
                @Html.DropDownListFor(model => model.PaymentId, ViewData["PaymentMethodList"] as SelectList, new { @class = "form-control" })
                <span asp-validation-for="PaymentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyId" class="control-label">Currency</label>
                @Html.DropDownListFor(model => model.CurrencyId, ViewData["CurrencyCodeList"] as SelectList, new { @class = "form-control" })
                <span asp-validation-for="CurrencyId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
