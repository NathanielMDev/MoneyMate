@model MoneyMate.Models.PaymentMethod.PaymentMethodEdit

@{
    string title = "Edit " + Model.PaymentName;
    ViewData["Title"] = title;
}

<div class="container">
    <h1>@title</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PaymentName">Payment Method Name</label>
                    <input asp-for="PaymentName" class="form-control" placeholder="Enter payment method name" />
                    <span asp-validation-for="PaymentName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.HiddenFor(model => model.PaymentId)
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
