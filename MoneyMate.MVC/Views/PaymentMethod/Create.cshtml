@model MoneyMate.Models.PaymentMethod.PaymentMethodCreate

<div class="container section-container">
    <h1>Create a Payment Method</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PaymentName" class="control-label">Payment Name</label>
                    <input asp-for="PaymentName" class="form-control" placeholder="Enter payment name" />
                    <span asp-validation-for="PaymentName" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
