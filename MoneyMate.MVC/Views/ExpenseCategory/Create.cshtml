@model MoneyMate.Models.ExpenseCategory.ExpenseCategoryCreate

@{
    ViewData["Title"] = "Create a Category";
}

<div class="container section-container">
    <h1>Create a Category</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Category Name</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
