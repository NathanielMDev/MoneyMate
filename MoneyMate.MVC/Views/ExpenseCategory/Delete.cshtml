}

<h1>@title</h1>
<h4>Are you sure you want to delete @Model.CategoryName</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CategoryId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CategoryId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CategoryName)
    </dt>
